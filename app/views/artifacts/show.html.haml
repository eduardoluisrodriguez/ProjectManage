- model_class = Artifact
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @artifact.name
  %dt
    %strong
      = model_class.human_attribute_name(:key)
      \:
  %dd= @artifact.key
  %dt
    %strong
      = model_class.human_attribute_name(:project_id)
      \:
  %dd= @artifact.project_id
= link_to t('.back', :default => t("helpers.links.back")),artifacts_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_artifact_path(@artifact), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), artifact_path(@artifact), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
