- model_class = UserProject
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:project_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @user_projects.each do |user_project|
      %tr
        %td= link_to user_project.id, user_project_path(user_project)
        %td= user_project.project_id
        %td= user_project.user_id
        %td= l user_project.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")),user_project_path(user_project), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")),edit_user_project_path(user_project), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")),user_project_path(user_project),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_user_project_path, :class => 'btn btn-primary'
